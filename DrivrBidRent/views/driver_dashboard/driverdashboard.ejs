    text-decoration: none;
    padding: 8px 15px;
    border-radius: 25px;
    background: #4CAF50; /* Green color for contrast */
    transition: background 0.3s ease;
}

.header-right .profile-link:hover {
    background: #45a049; /* Darker green on hover */
}

/* Left Panel */
.left-panel {
    width: 300px;
    background: #ff8500;
    padding: 20px;
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
}

.left-panel .card {
    background: white;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.left-panel h2 {
    color: #333;
    margin-bottom: 15px;
}

.left-panel h3 {
    color: #333;
    margin-bottom: 10px;
}

/* Availability */
.availability-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
}

.switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
}

.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: red;
    border-radius: 34px;
    transition: 0.4s;
}

.slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    border-radius: 50%;
    transition: 0.4s;
}

input:checked + .slider {
    background-color: green;
}

input:checked + .slider:before {
    transform: translateX(26px);
}

#availability-text {
    font-weight: bold;
    color: red;
}

input:checked + .slider + #availability-text {
    color: green;
}

/* Finances */
.finance-details {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.finance-details label {
    display: flex;
    align-items: center;
    gap: 10px;
}

.finance-details input {
