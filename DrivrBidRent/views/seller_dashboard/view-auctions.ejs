<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Auctions - DriveBidRent</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
      }

      body {
        background-color: #f8f8f8;
        color: #333333;
      }

      /* Seller Dashboard Content */
      .seller-dashboard {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .seller-dashboard h1 {
        color: #ff6b00;
        font-size: 2.5rem;
        margin-bottom: 2rem;
        text-align: center;
      }

      /* Auction cards grid */
      .auction-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
      }

      .auction-card {
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
      }

      .auction-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
      }

      .auction-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      .auction-info {
        padding: 1.2rem;
      }

      .auction-title {
        font-size: 1.3rem;
        font-weight: 600;
        color: #ff6b00;
        margin-bottom: 0.5rem;
      }

      /* Status styling */
      .status-pending {
        color: #FFA500;
        font-weight: bold;
      }

      .status-approved {
        color: #008000;
        font-weight: bold;
      }

      .status-rejected {
        color: #FF0000;
        font-weight: bold;
      }

      .status-assignedMechanic {
        color: #1E90FF;
        font-weight: bold;
      }

      /* Details modal */
      .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 100;
        overflow-y: auto;
      }

      .modal-content {
        background-color: #fff;
        margin: 5% auto;
        width: 90%;
        max-width: 900px;
        border-radius: 1rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
      }

      .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        background: linear-gradient(135deg, #ff6b00, #ff9a44);
        color: white;
      }

      .modal-title {
        font-size: 1.5rem;
        font-weight: 600;
      }

      .close {
        font-size: 1.8rem;
        font-weight: bold;
        cursor: pointer;
      }

      .close:hover {
        color: #f0f0f0;
      }

      .modal-body {
        padding: 1.5rem;
        display: flex;
        flex-wrap: wrap;
      }

      .vehicle-image-container {
        flex: 1;
        min-width: 300px;
      }

      .vehicle-details-container {
        flex: 1;
        min-width: 300px;
        padding-left: 2rem;
      }

      .vehicle-image {
        width: 100%;
        max-width: 400px;
        border-radius: 0.5rem;
      }

      .vehicle-name {
        font-size: 1.8rem;
        font-weight: 600;
        color: #ff6b00;
        margin-bottom: 0.5rem;
      }

      .vehicle-status-container {
        margin-top: 1rem;
        margin-bottom: 1.5rem;
      }

      .detail-item {
        display: flex;
        margin-bottom: 0.8rem;
      }

      .detail-label {
        font-weight: 600;
        width: 140px;
      }

      .detail-value {
        flex: 1;
      }

      .card-btn {
        display: inline-block;
        background: linear-gradient(135deg, #ff6b00, #ff9a44);
        color: white;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.5rem;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s ease;
        margin-top: 1rem;
        cursor: pointer;
      }

      .card-btn:hover {
        background: linear-gradient(135deg, #ff9a44, #ff6b00);
      }

      .no-auctions {
        text-align: center;
        padding: 3rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      .mechanic-info {
        background-color: #f0f8ff;
        border-left: 4px solid #1e90ff;
        padding: 1rem;
        margin-top: 1.5rem;
        border-radius: 0.5rem;
      }

      .mechanic-info h3 {
        color: #1e90ff;
        margin-bottom: 0.5rem;
      }

      .mechanic-info p {
        margin-bottom: 0.5rem;
      }

      .alert-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 101;
      }

      .alert-modal-content {
        background-color: #fff;
        margin: 20% auto;
        width: 90%;
        max-width: 500px;
        border-radius: 1rem;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        overflow: hidden;
      }

      .alert-modal-header {
        background: linear-gradient(135deg, #ff6b00, #ff9a44);
        color: white;
        padding: 1rem 1.5rem;
        text-align: center;
      }

      .alert-modal-body {
        padding: 1.5rem;
        text-align: center;
      }

      .alert-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        float: right;
        color: white;
      }
    </style>
  </head>
  <body>
    <!-- Navigation -->
    <%- include('partials/navbar', { currentPage: 'profile' }) %>


    <!-- Main Content -->
    <div class="seller-dashboard">
      <h1>My Auctions</h1>

      <% if (error) { %>
        <div style="background: #ffebee; color: #c62828; padding: 1rem; border-radius: 0.5rem; margin-bottom: 2rem;">
          <%= error %>
        </div>
      <% } %>

      <% if (auctions && auctions.length > 0) { %>
        <div class="auction-grid">
          <% auctions.forEach(auction => { %>
            <div class="auction-card" onclick="openModal('<%= auction._id %>')">
              <img src="<%= auction.vehicleImage %>" alt="<%= auction.vehicleName %>" class="auction-image" />
              <div class="auction-info">
                <h3 class="auction-title"><%= helpers.capitalize(auction.vehicleName) %></h3>
                <p><strong>Year:</strong> <%= auction.year %></p>
                <p><strong>Status:</strong> <span class="status-<%= auction.status %>"><%= helpers.capitalize(auction.status) %></span></p>
                <% if (auction.status === 'assignedMechanic' && auction.assignedMechanic) { %>
                  <p><strong>Mechanic:</strong> <%= auction.assignedMechanic.firstName %> <%= auction.assignedMechanic.lastName %></p>
                <% } %>
                <p><strong>Auction Date:</strong> <%= helpers.formatDate(auction.auctionDate) %></p>
              </div>
            </div>
          <% }); %>
        </div>
      <% } else { %>
        <div class="no-auctions">
          <h2>No Auctions Found</h2>
          <p>You haven't created any auctions yet.</p>
          <a href="/seller_dashboard/add-auction" class="card-btn">Create New Auction</a>
        </div>
      <% } %>
    </div>

    <!-- Vehicle Details Modal -->
    <div id="vehicleModal" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title" id="modalVehicleName">Vehicle Details</h2>
          <span class="close" onclick="closeModal()">&times;</span>
        </div>
        <div class="modal-body">
          <div class="vehicle-image-container">
            <img id="modalVehicleImage" src="" alt="Vehicle" class="vehicle-image" />
          </div>
          <div class="vehicle-details-container">
            <div class="vehicle-status-container">
              <span id="modalVehicleStatus" class="status-pending">Pending</span>
              <span id="modalAuctionStarted">Not Started</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Year:</span>
              <span id="modalVehicleYear" class="detail-value">Not specified</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Mileage:</span>
              <span id="modalVehicleMileage" class="detail-value">Not specified</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Fuel Type:</span>
              <span id="modalVehicleFuel" class="detail-value">Not specified</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Transmission:</span>
              <span id="modalVehicleTransmission" class="detail-value">Not specified</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Condition:</span>
              <span id="modalVehicleCondition" class="detail-value">Not specified</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Auction Date:</span>
              <span id="modalVehicleAuctionDate" class="detail-value">Not specified</span>
            </div>
            <div class="detail-item">
              <span class="detail-label">Starting Bid:</span>
              <span id="modalVehicleStartingBid" class="detail-value">Not specified</span>
            </div>
            <div id="viewBidsContainer"></div>
            <div id="mechanicInfoContainer" style="display: none;"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Alert Modal -->
    <div id="alertModal" class="alert-modal">
      <div class="alert-modal-content">
        <div class="alert-modal-header">
          <span class="alert-close" onclick="closeAlertModal()">&times;</span>
          <h3>Information</h3>
        </div>
        <div class="alert-modal-body">
          <p id="alertMessage"></p>
          <button class="card-btn" onclick="closeAlertModal()">OK</button>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>

    <script>
      const auctionData = [
        <% auctions.forEach((auction, index) => { %>
          {
            id: "<%= auction._id %>",
            name: "<%= helpers.capitalize(auction.vehicleName) %>",
            image: "<%= auction.vehicleImage %>",
            year: "<%= auction.year || 'Not specified' %>",
            mileage: "<%= auction.mileage ? auction.mileage + ' km' : 'Not specified' %>",
            fuelType: "<%= helpers.capitalize(auction.fuelType || 'Not specified') %>",
            transmission: "<%= helpers.capitalize(auction.transmission || 'Not specified') %>",
            condition: "<%= helpers.capitalize(auction.condition || 'Not specified') %>",
            auctionDate: "<%= helpers.formatDate(auction.auctionDate) %>",
            startingBid: "<%= auction.startingBid ? `â‚¹${auction.startingBid}` : 'Not specified' %>",
            status: "<%= auction.status || 'pending' %>",
            started_auction: "<%= auction.started_auction || 'no' %>",
            mechanic: {
              name: "<%= auction.assignedMechanic ? auction.assignedMechanic.firstName + ' ' + auction.assignedMechanic.lastName : 'Not assigned' %>",
              address: "<%= auction.assignedMechanic ? `${auction.assignedMechanic.doorNo || ''}, ${auction.assignedMechanic.street || ''}, ${auction.assignedMechanic.city || ''}, ${auction.assignedMechanic.state || ''}`.replace(/, , /g, ', ').replace(/^, |, $/g, '') : 'Not assigned' %>"
            }
          }<%= index < auctions.length - 1 ? ',' : '' %>
        <% }); %>
      ];

      const modal = document.getElementById("vehicleModal");
      const alertModal = document.getElementById("alertModal");

      // Function to open the modal and populate with vehicle data
      function openModal(auctionId) {
        const auction = auctionData.find(a => a.id === auctionId);
        if (!auction) return;

        // Populate modal with auction data
        document.getElementById("modalVehicleName").textContent = auction.name;
        document.getElementById("modalVehicleImage").src = auction.image;
        document.getElementById("modalVehicleYear").textContent = auction.year;
        document.getElementById("modalVehicleMileage").textContent = auction.mileage;
        document.getElementById("modalVehicleFuel").textContent = auction.fuelType;
        document.getElementById("modalVehicleTransmission").textContent = auction.transmission;
        document.getElementById("modalVehicleCondition").textContent = auction.condition;
        document.getElementById("modalVehicleAuctionDate").textContent = auction.auctionDate;
        document.getElementById("modalVehicleStartingBid").textContent = auction.startingBid;

        // Set status with appropriate styling
        const statusElement = document.getElementById("modalVehicleStatus");
        statusElement.textContent = auction.status.charAt(0).toUpperCase() + auction.status.slice(1);
        statusElement.className = `status-${auction.status}`;

        // Set auction started status
        const auctionStartedElement = document.getElementById("modalAuctionStarted");
        if (auction.started_auction === 'yes') {
          auctionStartedElement.textContent = 'Started';
        } else if (auction.started_auction === 'ended') {
          auctionStartedElement.textContent = 'Ended';
        } else {
          auctionStartedElement.textContent = 'Not Started';
        }

        // Add View Bids button if applicable
        const viewBidsContainer = document.getElementById("viewBidsContainer");
        viewBidsContainer.innerHTML = '';

        if (auction.status === 'approved' || auction.status === 'assignedMechanic') {
          if (auction.started_auction === 'yes' || auction.started_auction === 'ended') {
            // If auction is approved and either started or ended, allow viewing bids
            const viewBidsBtn = document.createElement('a');
            viewBidsBtn.href = `/seller_dashboard/view-bids/${auction.id}`;
            viewBidsBtn.className = 'card-btn';
            viewBidsBtn.textContent = 'View Bids';
            viewBidsContainer.appendChild(viewBidsBtn);
          } else {
            // If auction is approved but not started, show button that triggers alert
            const notStartedBtn = document.createElement('button');
            notStartedBtn.className = 'card-btn';
            notStartedBtn.textContent = 'View Bids';
            notStartedBtn.onclick = function(e) {
              e.preventDefault();
              showAlert("Auction has not yet started. Please wait for the auction manager to start the auction.");
            };
            viewBidsContainer.appendChild(notStartedBtn);
          }
        }

        // Show mechanic info if assigned
        const mechanicInfoContainer = document.getElementById("mechanicInfoContainer");
        if (auction.status === 'assignedMechanic' && auction.mechanic.name !== 'Not assigned') {
          mechanicInfoContainer.innerHTML = `
            <div class="mechanic-info">
              <h3>Assigned Mechanic</h3>
              <p><strong>Name:</strong> ${auction.mechanic.name}</p>
              <p><strong>Address:</strong> ${auction.mechanic.address}</p>
              <p><strong>Instruction:</strong> Please send the car to the specified mechanic for inspection.</p>
            </div>
          `;
          mechanicInfoContainer.style.display = 'block';
        } else {
          mechanicInfoContainer.style.display = 'none';
        }

        // Show modal
        modal.style.display = "block";
      }

      // Function to show alert modal
      function showAlert(message) {
        document.getElementById("alertMessage").textContent = message;
        alertModal.style.display = "block";
      }

      // Function to close the alert modal
      function closeAlertModal() {
        alertModal.style.display = "none";
      }

      // Function to close the modal
      function closeModal() {
        modal.style.display = "none";
      }

      // Close modal when clicking outside of it
      window.onclick = function(event) {
        if (event.target === modal) {
          closeModal();
        }
        if (event.target === alertModal) {
          closeAlertModal();
        }
      }

      // Logout button functionality
      document.querySelector('.logout-btn')?.addEventListener('click', () => {
        window.location.href = '/logout';
      });
    </script>
  </body>
</html>