<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hire Driver - DriveBidRent</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "montserrat", sans-serif;
}

body {
    background-color: #ffffff; /* Changed to white */
    color: #333333; /* Changed to dark gray for better contrast */
}

/* Navbar */
.navbar {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background-color: #ffffff; /* Changed to white */
    padding: 1rem 0;
    box-shadow: 0 2px 20px rgba(255, 107, 0, 0.2); /* Orange shadow */
    z-index: 1000;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.logo a {
    color: #ff6b00; /* Orange */
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-links a {
    color: #333333; /* Dark gray */
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding-bottom: 5px;
}

.nav-links a:hover, .nav-links a.active {
    border-bottom: 3px solid #ff6b00; /* Orange */
}

/* Logout Button */
.logout-btn {
    background-color: #ff6b00; /* Orange */
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
}

.logout-btn:hover {
    background-color: #e65c00; /* Darker orange */
    transform: translateY(-1px);
}

/* Adjust profile container to accommodate the new button */
.profile {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap; /* Allow items to wrap if needed */
}

.profile img {
    height: 40px;
    border-radius: 50%; /* Make the profile image round */
}

.profile-text {
    color: #ff6b00; /* Orange */
    text-decoration: none;
    font-weight: 600; /* Bold */
    text-transform: uppercase; /* Uppercase text */
    letter-spacing: 1px; /* Add spacing between letters */
    transition: color 0.3s ease;
}

.profile-text:hover {
    color: #e65c00; /* Darker orange on hover */
}

/* Driver Hiring Page Styles */
.hire-driver-details {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.hire-driver-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.driver-image img {
    width: 100%;
    border-radius: 1rem;
}

.driver-info h1 {
    color: #ff6b00;
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.cost-per-day {
    font-size: 1.2rem;
    margin-bottom: 1rem;
}

.driver-specs {
    background-color: #f9f9f9;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.driver-specs p {
    margin-bottom: 0.5rem;
    color: #333333;
}

.hire-form {
    background-color: #ffffff;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.hire-form h2 {
    color: #ff6b00;
    margin-bottom: 1rem;
}

.hire-form label {
    display: block;
    margin-bottom: 0.5rem;
    color: #333333;
}

.hire-form input, .hire-form select {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.3rem;
}

.hire-btn {
    background: linear-gradient(135deg, #ff6b00, #ff9a44);
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.3rem;
    cursor: pointer;
    transition: background 0.3s ease;
}

.hire-btn:hover {
    background: linear-gradient(135deg, #ff9a44, #ff6b00);
}

.hire-summary {
    background-color: #ffffff;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-top: 2rem;
}

.hire-summary h2 {
    color: #ff6b00;
    margin-bottom: 1rem;
}

.hire-summary p {
    margin-bottom: 0.5rem;
    color: #333333;
}

/* Footer */
footer {
    background: linear-gradient(135deg, #ff6b00, #ff9a44); /* Gradient background */
    padding: 4rem 2rem 2rem;
    margin-top: 4rem;
    color: white; /* White text for better contrast */
    border-top: none; /* Remove the orange border */
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    gap: 3rem;
}

.footer-section h3 {
    color: white; /* White text for headings */
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.8rem;
}

.footer-section a {
    color: white; /* White text for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section p {
    margin-top: 0.8rem;
    color: white; /* White text for paragraphs */
}

.footer-section a:hover {
    color: #f0f0f0; /* Light gray on hover */
}

.social-icons {
    display: flex;
    gap: 1rem;
}

.social-icons img {
    width: 30px;
    height: 30px;
    filter: brightness(0) invert(1); /* Make icons white */
    transition: transform 0.3s ease;
}

.social-icons img:hover {
    transform: scale(1.2); /* Scale icons on hover */
}

.copyright {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2); /* Light white border */
    color: white; /* White text for copyright */
}
/* Responsive Design */
@media (max-width: 768px) {
    .nav-container {
        flex-direction: column;
        gap: 1rem;
    }

    .nav-links {
        flex-wrap: wrap;
        justify-content: center;
    }

    .hero {
        margin-top: 8rem;
    }
}


    </style>
</head>
<body>
<!-- Navigation Bar -->
<nav class="navbar">
    <div class="nav-container">
        <div class="logo"><a href="/proj">DriveBidRent</a></div>
        <div class="nav-links">
            <a href="/purchase">My Purchases</a>
            <a href="/wishlist">Wishlist</a>
            <a href="#notifications">Notifications</a>
            <a href="/Aboutus">About Us</a>
        </div>
        <div class="profile">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="profile symbol" style="height: 40px;">
            <a href="/profile" class="profile-text">My Profile</a>
            <button class="logout-btn" onclick="location.href='/'">Logout</button>
        </div>
    </div>
</nav>

    <!-- Driver Hiring Page Content -->
    <section class="hire-driver-details">
        <div class="hire-driver-container">
            <!-- Driver Image and Basic Details -->
            <div class="driver-image">
                <img src="<%= image %>" alt="<%= name %>">
            </div>
            <div class="driver-info">
                <h1><%= name %></h1>
                <p class="cost-per-day">Cost/day: <strong><%= cost %></strong></p>
                <div class="driver-specs">
                    <p><strong>No. of days Available:</strong> <%= a_days %></p>
                    <p><strong>Available:</strong> <%= available %></p>
                    <p><strong>Automatic Car:</strong> <%= auto %></p>
                    <p><strong>Rating:</strong> <%= rating %></p>
                </div>
            </div>

            <!-- Hiring Form -->
            <div class="hire-form">
                <h2>Hiring Details</h2>
                <form id="hire-form">
                    <label for="start-date">Start Date:</label>
                    <input type="date" id="start-date" name="start-date" required>

                    <label for="end-date">End Date:</label>
                    <input type="date" id="end-date" name="end-date" required>

                    <label for="car-type">Car Type:</label>
                    <select id="car-type" name="car-type">
                        <option value="manual">Manual</option>
                        <option value="automatic">Automatic</option>
                    </select>

                    <button type="submit" class="hire-btn">Confirm Hiring</button>
                </form>
            </div>

            <!-- Hiring Summary -->
            <div class="hire-summary">
                <h2>Hiring Summary</h2>
                <p><strong>Driver:</strong> Pant</p>
                <p><strong>Cost/day:</strong> ₹1,500</p>
                <p><strong>Start Date:</strong> <span id="summary-start-date">-</span></p>
                <p><strong>End Date:</strong> <span id="summary-end-date">-</span></p>
                <p><strong>Car Type:</strong> <span id="summary-car-type">-</span></p>
                <p><strong>Total Cost:</strong> <span id="total-cost">-</span></p>
            </div>
        </div>
    </section>

        <!-- Footer -->
        <footer>
            <div class="footer-container">
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/purchase">My Purchases</a></li>
                        <li><a href="/wishlist">Wishlist</a></li>
                        <li><a href="index.html#notifications">Notifications</a></li>
                        <li><a href="/Aboutus">About Us</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact Us</h3>
                    <p><strong>Email:</strong> <a href="mailto:jeevanvankadara@gmail.com">jeevanvankadara@gmail.com</a></p>
                    <p><strong>Phone:</strong> <a href="tel:9876543210">9876543210</a></p>
                    <p><strong>Address:</strong> sb-2, sagar colony, hyderabad</p>
                </div>
                <div class="footer-section">
                    <h3>Follow Us</h3>
                    <div class="social-icons">
                        <a href="#instagram"><img src="./images/instagram.png" alt="Instagram"></a>
                        <a href="#facebook"><img src="./images/facebook.png" alt="Facebook"></a>
                        <a href="#twitter"><img src="./images/X.png" alt="X"></a>
                    </div>
                </div>
            </div>
            <p class="copyright">© 2025 DriveBidRent | All rights reserved.</p>
        </footer>

    <!-- Link to the driver-specific JavaScript -->
    <script >
        // Hiring Form Submission
const hireForm = document.getElementById('hire-form');
const summaryStartDate = document.getElementById('summary-start-date');
const summaryEndDate = document.getElementById('summary-end-date');
const summaryCarType = document.getElementById('summary-car-type');
const totalCost = document.getElementById('total-cost');

hireForm.addEventListener('submit', (e) => {
    e.preventDefault();

    // Get form values
    const startDate = document.getElementById('start-date').value;
    const endDate = document.getElementById('end-date').value;
    const carType = document.getElementById('car-type').value;

    // Calculate total cost (example: ₹1,500/day * 5 days)
    const costPerDay = 1500;
    const days = 5; // Example duration
    const total = costPerDay * days;

    // Update summary
    summaryStartDate.textContent = startDate;
    summaryEndDate.textContent = endDate;
    summaryCarType.textContent = carType;
    totalCost.textContent = `₹${total}`;

    alert('Driver hiring confirmed! Thank you for choosing DriveBidRent.');
});
    </script>
</body>
</html>