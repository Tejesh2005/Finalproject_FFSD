/* Car Cards */
.car-card {
    background-color: #ffffff; /* White */
    border-radius: 1rem;
    padding: 1.5rem;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #ff6b00; /* Orange */
    height: 550px;
}

.car-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(255, 107, 0, 0.3);
}

.hot-tag {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background-color: #ff6b00; /* Orange */
    color: white;
    padding: 2px 15px;
    border-radius: 10px;
    font-size: 15px;
    font-weight: 400;
    margin-top: 50%;
    margin-left: 4%;
}

.heart-btn {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: none;
    border: none;
    color: #ff6b00; /* Orange */
    font-size: 1.5rem;
    cursor: pointer;
    transition: color 0.3s ease;
}

.car-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.car-card h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: #ff6b00; /* Orange */
