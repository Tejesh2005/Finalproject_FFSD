    line-height: 1.5;
    font-size: 16px;
    font-weight: 500;
    color: #333333; /* Dark gray */
}

.heading1 h1:hover {
    text-shadow: 0px 0px 15px #ff6b00; /* Orange */
}

.oneL {
    color: #ff6b00; /* Orange */
