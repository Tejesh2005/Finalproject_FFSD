        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "montserrat", sans-serif;
}

body {
    background-color: #ffffff; /* Changed to white */
    color: #333333; /* Changed to dark gray for better contrast */
}

/* Navbar */
.navbar {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background-color: #ffffff; /* Changed to white */
    padding: 1rem 0;
    box-shadow: 0 2px 20px rgba(255, 107, 0, 0.2); /* Orange shadow */
    z-index: 1000;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.logo a {
    color: #ff6b00; /* Orange */
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-links a {
    color: #333333; /* Dark gray */
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding-bottom: 5px;
}

.nav-links a:hover, .nav-links a.active {
    border-bottom: 3px solid #ff6b00; /* Orange */
}

/* Logout Button */
.logout-btn {
    background-color: #ff6b00; /* Orange */
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
}

.logout-btn:hover {
    background-color: #e65c00; /* Darker orange */
    transform: translateY(-1px);
}

/* Adjust profile container to accommodate the new button */
.profile {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap; /* Allow items to wrap if needed */
}

.profile img {
    height: 40px;
    border-radius: 50%; /* Make the profile image round */
}

.profile-text {
    color: #ff6b00; /* Orange */
    text-decoration: none;
    font-weight: 600; /* Bold */
    text-transform: uppercase; /* Uppercase text */
    letter-spacing: 1px; /* Add spacing between letters */
    transition: color 0.3s ease;
}

.profile-text:hover {
    color: #e65c00; /* Darker orange on hover */
}

/* Heading Section */
.heading1 {
    width: 800px;
    height: 400px;
    padding-top: 250px;
    padding-left: 500px;
    padding-right: 20px;
    margin: 150px auto 85px auto;
    border: 3px solid #ff6b00; /* Orange */
    border-radius: 15px;
    box-shadow: 10px 10px 50px rgba(255, 107, 0, 0.3); /* Orange shadow */
    background: linear-gradient(135deg, #ff6b00, #ff9a44, #ffffff);
    opacity: 1;
    border: none;
}


.heading1 h1 {
    font-family: "Montserrat", sans-serif;
    font-size: 29px;
    transition: text-shadow 0.3s ease-in-out;
    margin-bottom: 10px;
    color: #ff6b00; /* Orange */
}

.heading1 p {
