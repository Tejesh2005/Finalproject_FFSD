        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Montserrat', sans-serif;
}

body {
    background-color: #ffffff; /* Changed to white */
    color: #333333; /* Changed to dark gray for better contrast */
}

/* Navbar */
.navbar {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background-color: #ffffff; /* Changed to white */
    padding: 1rem 0;
    box-shadow: 0 2px 20px rgba(255, 107, 0, 0.2); /* Orange shadow */
    z-index: 1000;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.logo a {
    color: #ff6b00; /* Orange */
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-links a {
    color: #333333; /* Dark gray */
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding-bottom: 5px;
}

.nav-links a:hover, .nav-links a.active {
    border-bottom: 3px solid #ff6b00; /* Orange */
}

/* Logout Button */
.logout-btn {
    background-color: #ff6b00; /* Orange */
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
}

.logout-btn:hover {
    background-color: #e65c00; /* Darker orange */
    transform: translateY(-1px);
}

/* Adjust profile container to accommodate the new button */
.profile {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap; /* Allow items to wrap if needed */
}

.profile img {
    height: 40px;
    border-radius: 50%; /* Make the profile image round */
}

.profile-text {
    color: #ff6b00; /* Orange */
    text-decoration: none;
    font-weight: 600; /* Bold */
    text-transform: uppercase; /* Uppercase text */
    letter-spacing: 1px; /* Add spacing between letters */
    transition: color 0.3s ease;
}

.profile-text:hover {
    color: #e65c00; /* Darker orange on hover */
}

/* Hero Section */
.purchases-hero {
    width: 800px;
    height: 400px;
    padding-top: 150px;
    margin: 150px auto 85px auto;
    border: 3px solid #ff6b00; /* Orange */
    border-radius: 15px;
    box-shadow: 5px 10px 20px rgba(255, 107, 0, 0.3); /* Orange shadow */
    text-align: center;
    background-color: #ffffff; /* White */
    opacity: 1;
}

.purchases-hero h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    color: #ff6b00; /* Orange */
}

.purchases-hero p {
    font-size: 1.15rem;
    opacity: 0.75;
    color: #333333; /* Dark gray */
}

.oneL {
    color: #ff6b00; /* Orange */
}

/* Sections */
section {
    padding: 3rem 2rem;
    max-width: 1100px;
    margin: 0 auto;
}

section h2 {
    color: #ff6b00; /* Orange */
    font-size: 2rem;
    text-align: center;
    margin-bottom: 2rem;
    position: relative;
    padding-bottom: 1rem;
}

.card-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 cards in a row */
    gap: 2rem;
}

/* Responsive Design */
@media (max-width: 1024px) {
    .card-container {
        grid-template-columns: repeat(2, 1fr); /* 2 cards per row */
    }
}

@media (max-width: 768px) {
    .card-container {
        grid-template-columns: repeat(1, 1fr); /* 1 card per row */
    }
}

/* Car Cards */
.car-card {
    background-color: #ffffff; /* White */
    border-radius: 1rem;
    padding: 1.5rem;
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #ff6b00; /* Orange */
    height: 550px;
}

.car-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(255, 107, 0, 0.3);
}

.status-tag {
    position: absolute;
    top: 1.75rem;
    left: 1.5rem;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.9rem;
    font-weight: 500;
    z-index: 1;
}

.status-tag.purchased {
    background-color: #ff6b00; /* Orange */
    color: white;
}

.status-tag.active {
    background-color: #ff6b00; /* Orange */
    color: white;
}

.status-tag.completed {
    background-color: #888888; /* Gray */
    color: white;
}

.car-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.car-card h3 {
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
    color: #ff6b00; /* Orange */
}

.purchase-date, .rental-period, .booking-period {
    color: #666666; /* Gray */
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

.car-details {
    background-color: #f9f9f9; /* Light gray */
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.car-details p {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    color: #333333; /* Dark gray */
}

.doc-link {
    color: #2196F3; /* Blue */
    text-decoration: none;
}

.doc-link:hover {
    text-decoration: underline;
}

.details-btn, .bid-btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 0.3rem;
    text-decoration: none;
    transition: all 0.3s ease;
    font-weight: 500;
}

.details-btn {
