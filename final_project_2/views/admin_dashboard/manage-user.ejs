    <!-- JavaScript for Suspend and Approve Buttons -->
    <script>
      // Function to suspend a user
      function suspendUser(button) {
        const userItem = button.parentElement;
        userItem.remove(); // Remove the user from the list
      }

      // Function to approve an auction manager
      function approveUser(button) {
        button.style.display = "none"; // Hide the approve button
      }
