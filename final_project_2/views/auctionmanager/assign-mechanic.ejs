<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRIVBIDRENT - Assign Mechanic</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Montserrat', sans-serif;
      }

      body {
        background-color: #ffffff;
      }

      /* Header Styles */
      .header {
        background-color: #ff6b00;
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 100;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
      }

      .logo a {
        color: white;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.8;
      }

      /* Car Details Container */
      .car-details-container {
        max-width: 1200px;
        margin: 120px auto 20px;
        padding: 30px 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 30px;
      }

      /* Left Column - Car Image */
      .car-left-column {
        flex: 1;
        min-width: 300px;
      }

      .car-image-container {
        width: 100%;
        height: 350px;
        overflow: hidden;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .car-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .car-name {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        text-align: center;
      }

      /* Right Column - Car Info */
      .car-right-column {
        flex: 1;
        min-width: 300px;
      }

      .car-info-section {
        margin-bottom: 25px;
      }

      .section-title {
        font-size: 22px;
        font-weight: bold;
        color: #333;
        margin-bottom: 15px;
        border-bottom: 2px solid #ff6b00;
        padding-bottom: 5px;
      }

      .car-info {
        font-size: 18px;
        color: #666;
        margin-bottom: 10px;
        padding: 5px 0;
      }

      .car-info strong {
        color: #333;
        display: inline-block;
        width: 130px;
      }

      .seller-details {
        margin-top: 10px;
      }

      .assign-mechanic {
        margin-top: 30px;
      }

      .assign-mechanic button {
        padding: 12px 24px;
        background-color: #ff6b00;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: opacity 0.3s ease;
      }

      .assign-mechanic button:hover {
        opacity: 0.8;
      }

      .mechanic-dropdown {
        display: none;
        margin-top: 15px;
      }

      .mechanic-dropdown select {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 16px;
      }

      .mechanic-assigned {
        padding: 12px 24px;
        background-color: #4caf50;
        color: white;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        margin-top: 15px;
        display: none;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .car-details-container {
          flex-direction: column;
        }
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="header">
      <div class="logo"><a href="/auctionmanager/home1">DRIVBIDRENT</a></div>
      <div class="nav-links">
        <a href="/auctionmanager/requests">REQUESTS</a>
        <a href="/auctionmanager/pending">PENDINGCARS</a>
        <a href="/auctionmanager/approvedcars">APPROVEDCARS</a>
      </div>
    </div>

    <!-- Car Details Container -->
    <div class="car-details-container">
      <!-- Left Column - Car Image -->
      <div class="car-left-column">
        <div class="car-image-container">
          <img src="<%= request.vehicleImage %>" alt="<%= request.vehicleName %>" class="car-image" />
        </div>
        <div class="car-name"><%= request.vehicleName %></div>
      </div>

      <!-- Right Column - Car Info -->
      <div class="car-right-column">
        <div class="car-info-section">
          <div class="section-title">Vehicle Information</div>
          <div class="car-info"><strong>Fuel Type:</strong> <%= request.fuelType || 'Not specified' %></div>
          <div class="car-info"><strong>Mileage:</strong> <%= request.mileage || 'Not specified' %> km</div>
          <div class="car-info"><strong>Condition:</strong> <%= request.status || 'Pending' %></div>
          <div class="car-info"><strong>Year:</strong> <%= request.year || 'Not specified' %></div>
          <div class="car-info"><strong>Transmission:</strong> <%= request.transmission || 'Not specified' %></div>
          <div class="car-info"><strong>Starting Bid:</strong> <%= request.startingBid? '$' + request.startingBid: 'Not specified' %></div>
        </div>

        <!-- Seller Details -->
        <div class="car-info-section">
          <div class="section-title">Seller Details</div>
          <div class="car-info"><strong>Name:</strong> <%= request.sellerId.firstName %> <%= request.sellerId.lastName %></div>
          <div class="car-info"><strong>Contact:</strong> <%= request.sellerId.phoneNumber || 'Not provided' %></div>
          <div class="car-info"><strong>Location:</strong> <%= request.sellerId.doorNo || '' %>,<%= request.sellerId.street || '' %>, <%= request.sellerId.city || '' %>, <%= request.sellerId.state || '' %></div>
        </div>

        <!-- Assign Mechanic Section -->
        <div class="assign-mechanic">
          <button id="assign-button" onclick="showMechanicDropdown()">
            Assign Mechanic
          </button>
          <div class="mechanic-dropdown" id="mechanic-dropdown">
            <select id="mechanic-select">
              <option value="">Select a Mechanic</option>
              <option value="Mechanic 1">Mechanic 1</option>
              <option value="Mechanic 2">Mechanic 2</option>
              <option value="Mechanic 3">Mechanic 3</option>
              <option value="Mechanic 4">Mechanic 4</option>
            </select>
          </div>
          <div id="mechanic-assigned" class="mechanic-assigned">
            Mechanic Assigned
          </div>
        </div>
      </div>
    </div>

    <script>
      // Function to show the mechanic dropdown
      function showMechanicDropdown() {
        const dropdown = document.getElementById("mechanic-dropdown");
        dropdown.style.display = "block";
      }

      // Function to assign a mechanic
      const mechanicSelect = document.getElementById("mechanic-select");
      mechanicSelect.addEventListener("change", function () {
        if (this.value) {
          // Send request to server to update the mechanic assignment
          fetch('/auctionmanager/assign-mechanic-update/<%= request._id %>', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ mechanicName: this.value })
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              const assignButton = document.getElementById("assign-button");
              const assignedMessage = document.getElementById("mechanic-assigned");

              assignButton.style.display = "none"; // Hide the Assign Mechanic button
              assignedMessage.style.display = "block"; // Show the Mechanic Assigned message
            } else {
              alert('Failed to assign mechanic. Please try again.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while assigning the mechanic.');
          });
        }
      });
    </script>
  </body>
</html>