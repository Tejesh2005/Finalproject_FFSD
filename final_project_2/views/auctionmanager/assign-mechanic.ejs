<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRIVBIDRENT - Assign Mechanic</title>
    <style>
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Montserrat', sans-serif;
}

      body {
        background-color: #ffffff; /* White background */
      }

      /* Header Styles */
      .header {
        background-color: #ff6b00; /* Orange header */
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
      }

      .logo a {
        color: white;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.8; /* Hover effect */
      }

      /* Car Details Container */
      .car-details-container {
        max-width: 1000px;
        margin: 120px auto 20px; /* Adjusted for fixed header */
        padding: 30px 20px;
      }

      .car-image-container {
        width: 100%;
        height: 300px;
        overflow: hidden;
        border-radius: 10px;
        margin-bottom: 20px;
      }

      .car-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .car-name {
        font-size: 28px;
        font-weight: bold;
        color: #333; /* Dark text for car name */
        margin-bottom: 10px;
      }

      .car-info {
        font-size: 18px;
        color: #666; /* Gray text for car info */
        margin-bottom: 10px;
      }

      .car-info strong {
        color: #333; /* Dark text for labels */
      }

      .seller-details {
        margin-top: 20px;
      }

      .seller-details h3 {
        font-size: 22px;
        color: #333; /* Dark text for heading */
        margin-bottom: 10px;
      }

      .seller-details p {
        font-size: 16px;
        color: #666; /* Gray text for seller info */
        margin-bottom: 5px;
      }

      .assign-mechanic {
        margin-top: 20px;
      }

      .assign-mechanic button {
        padding: 10px 20px;
        background-color: #ff6b00; /* Orange button */
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: opacity 0.3s ease;
      }

      .assign-mechanic button:hover {
        opacity: 0.8;
      }

      .mechanic-dropdown {
        display: none;
        margin-top: 10px;
      }

      .mechanic-dropdown select {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 16px;
      }

      .mechanic-assigned {
        padding: 10px 20px;
        background-color: #4caf50; /* Green for assigned */
        color: white;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        margin-top: 10px;
        display: none;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="header">
        <div class="logo"><a href="/auctionmanager/home1">DRIVBIDRENT</a></div>
        <div class="nav-links">
          <a href="/auctionmanager/requests">REQUESTS</a>
          <a href="/auctionmanager/pending">PENDINGCARS</a>
          <a href="/auctionmanager/approvedcars">APPROVEDCARS</a>
        </div>
      </div>

    <!-- Car Details Container -->
    <div class="car-details-container">
      <div class="car-image-container">
        <img src="<%= request.vehicleImage %>" alt="<%= request.vehicleName %>" class="car-image" />
      </div>
      <div class="car-name"><%= request.vehicleName %></div>
      <div class="car-info"><strong>Mileage:</strong> <%= request.vehicleMileage || 'Not specified' %> km</div>
      <div class="car-info"><strong>Condition:</strong> <%= request.status || 'Pending' %></div>

      <!-- Seller Details -->
      <div class="seller-details">
        <h3>Seller Details</h3>
        <p><strong>Name:</strong> <%= request.sellerId.firstName %> <%= request.sellerId.lastName %></p>
        <p><strong>Contact:</strong> <%= request.sellerId.phoneNumber || 'Not provided' %></p>
        <p><strong>Location:</strong> <%= request.sellerId.address || '' %>, <%= request.sellerId.city || '' %>, <%= request.sellerId.country || '' %></p>
      </div>

      <!-- Assign Mechanic Section -->
      <div class="assign-mechanic">
        <button id="assign-button" onclick="showMechanicDropdown()">
          Assign Mechanic
        </button>
        <div class="mechanic-dropdown" id="mechanic-dropdown">
          <select id="mechanic-select">
            <option value="">Select a Mechanic</option>
            <option value="Mechanic 1">Mechanic 1</option>
            <option value="Mechanic 2">Mechanic 2</option>
            <option value="Mechanic 3">Mechanic 3</option>
            <option value="Mechanic 4">Mechanic 4</option>
          </select>
        </div>
        <div id="mechanic-assigned" class="mechanic-assigned">
          Mechanic Assigned
        </div>
      </div>
    </div>

    <script>
      // Function to show the mechanic dropdown
      function showMechanicDropdown() {
        const dropdown = document.getElementById("mechanic-dropdown");
        dropdown.style.display = "block";
      }

      // Function to assign a mechanic
      const mechanicSelect = document.getElementById("mechanic-select");
      mechanicSelect.addEventListener("change", function () {
        if (this.value) {
          // Send request to server to update the mechanic assignment
          fetch('/auctionmanager/assign-mechanic-update/<%= request._id %>', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ mechanicName: this.value })
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              const assignButton = document.getElementById("assign-button");
              const assignedMessage = document.getElementById("mechanic-assigned");

              assignButton.style.display = "none"; // Hide the Assign Mechanic button
              assignedMessage.style.display = "block"; // Show the Mechanic Assigned message
            } else {
              alert('Failed to assign mechanic. Please try again.');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while assigning the mechanic.');
          });
        }
      });
    </script>
  </body>
</html>