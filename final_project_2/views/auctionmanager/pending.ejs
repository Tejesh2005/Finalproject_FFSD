<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRIVBIDRENT - Pending Cars</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Montserrat', sans-serif;
      }

      body {
        background-color: #ffffff;
      }

      /* Header Styles */
      .header {
        background-color: #ff6b00;
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 100;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
      }

      .logo a {
        color: white;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.8;
      }

      /* Cards Container */
      .cards-container {
        max-width: 1000px;
        margin: 120px auto 20px;
        padding: 30px 20px;
      }

      .car-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
      }

      .car-card {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
      }

      .car-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
      }

      .car-details {
        margin-top: 15px;
      }

      .car-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }

      .car-info {
        font-size: 16px;
        color: #666;
        margin-bottom: 5px;
      }

      .status-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
        margin-top: 10px;
      }

      .status-pending {
        background-color: #FFA500;
        color: white;
      }

      .view-button {
        width: 100%;
        padding: 10px;
        background-color: #ff6b00;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: opacity 0.3s ease;
        margin-top: 10px;
      }

      .view-button:hover {
        opacity: 0.8;
      }

      .no-cars {
        text-align: center;
        grid-column: 1 / -1;
        padding: 40px;
        color: #666;
        font-size: 18px;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="header">
      <div class="logo"><a href="/auctionmanager/home1">DRIVBIDRENT</a></div>
      <div class="nav-links">
        <a href="/auctionmanager/requests">REQUESTS</a>
        <a href="/auctionmanager/pending">PENDINGCARS</a>
        <a href="/auctionmanager/approvedcars">APPROVEDCARS</a>
      </div>
    </div>

    <!-- Cards Container -->
    <div class="cards-container">
      <div class="car-grid">
        <% if (pendingCars && pendingCars.length > 0) { %>
          <% pendingCars.forEach(function(car) { %>
            <div class="car-card">
              <img src="<%= car.vehicleImage %>" alt="<%= car.vehicleName %>" class="car-image" />
              <div class="car-details">
                <div class="car-title"><%= car.vehicleName %></div>
                <div class="car-info">Seller: <%= car.sellerId.firstName %> <%= car.sellerId.lastName %></div>
                <div class="car-info">Location: <%= car.sellerId.city %></div>
                <div class="status-badge status-pending">Pending Inspection</div>
              </div>
              <button class="view-button">
                View Details
              </button>
            </div>
          <% }); %>
        <% } else { %>
          <div class="no-cars">
            No cars currently pending inspection
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>