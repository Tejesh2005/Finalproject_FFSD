@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Montserrat', sans-serif;
}

        body {
            background-color: #ffffff; /* White background */
        }

        /* Header Styles */
      .header {
        background-color: #ff6b00; /* Orange header */
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
      }

      .logo a {
        color: white;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.8; /* Hover effect */
      }

        /* Cards Container */
        .cards-container {
            max-width: 1000px;
            margin: 120px auto 20px; /* Adjusted for fixed header */
            padding: 30px 20px;
        }

        .car-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        .car-card {
            background-color: #ffffff; /* White card background */
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }

        .car-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .car-image {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 10px;
        }

        .car-details {
            margin-top: 15px;
        }

        .car-title {
            font-size: 20px;
            font-weight: bold;
            color: #333; /* Dark text for car name */
            margin-bottom: 10px;
        }

        .car-info {
            font-size: 16px;
            color: #666; /* Gray text for car info */
            margin-bottom: 5px;
        }

        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .approve-btn, .decline-btn {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            transition: opacity 0.3s ease;
        }

        .approve-btn {
            background-color: #4CAF50; /* Green for approve */
            color: white;
        }

        .decline-btn {
            background-color: #f44336; /* Red for decline */
            color: white;
        }

        .approve-btn:hover, .decline-btn:hover {
            opacity: 0.8;
        }

        .approved, .declined {
            padding: 8px 16px;
            border-radius: 5px;
            font-size: 14px;
            font-weight: bold;
            color: white;
        }

        .approved {
            background-color: #4CAF50; /* Green for approved */
        }

        .declined {
            background-color: #f44336; /* Red for declined */
        }
    </style>
</head>
