<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Auction - Kia Sonet HTK Plus</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "montserrat", sans-serif;
        }

        body {
            background-color: #ffffff;
            color: #333333;
        }

        /* Auction Page Styles */
        .auction-details {
            padding: 4rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .auction-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .car-image img {
            width: 100%;
            border-radius: 1rem;
        }

        .car-info h1 {
            color: #ff6b00;
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .auction-status, .current-bid, .estimated-price {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .car-specs {
            background-color: #f9f9f9;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .car-specs p {
            margin-bottom: 0.5rem;
            color: #333333;
        }

        .bidding-form {
            background-color: #ffffff;
            padding: 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .bidding-form h2 {
            color: #ff6b00;
            margin-bottom: 1rem;
        }

        .bidding-form label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333333;
        }

        .bidding-form input {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 0.3rem;
        }

        .bid-btn {
            background: linear-gradient(135deg, #ff6b00, #ff9a44);
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 0.3rem;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .bid-btn:hover {
            background: linear-gradient(135deg, #ff9a44, #ff6b00);
        }

        .bid-note {
            font-size: 0.9rem;
            color: #666666;
            margin-top: 1rem;
        }

        .bid-history {
            background-color: #ffffff;
            padding: 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
        }

        .bid-history h2 {
            color: #ff6b00;
            margin-bottom: 1rem;
        }

        .bid-history ul {
            list-style: none;
        }

        .bid-history li {
            margin-bottom: 0.5rem;
            color: #333333;
        }

        /* Countdown Timer Styles */
        .auction-status {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #333333;
        }

        #countdown {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: linear-gradient(135deg, #ff6b00, #ff9a44);
            color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(255, 107, 0, 0.3);
            animation: pulse 1.5s infinite;
        }

        @keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .auction-container {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Include Navigation Bar -->
    <%- include('partials/navbar') %>

    <!-- Auction Page Content -->
    <section class="auction-details">
        <div class="auction-container">
            <!-- Car Image and Basic Details -->
            <div class="car-image">
                <img src="<%=image%>" alt="<%=name%>">
            </div>
            <div class="car-info">
                <h1><%=name%></h1>
                <p class="auction-status">Auction Ends In: <span id="countdown">02:00:00</span></p>
                <p class="current-bid">Current Bid: <strong>₹8,50,000</strong></p>
                <p class="estimated-price">Estimated Price: ₹7,00,000 - ₹9,00,000</p>
                <div class="car-specs">
                    <p><strong>Year:</strong> <%=year%></p>
                    <p><strong>Mileage:</strong> <%=milage%></p>
                    <p><strong>Condition:</strong> <%=condition%></p>
                    <p><strong>Fuel Type:</strong> <%=fueltype%></p>
                    <p><strong>Transmission:</strong> <%=transmission%></p>
                </div>
            </div>

            <!-- Bidding Form -->
            <div class="bidding-form">
                <h2>Place Your Bid</h2>
                <form id="bid-form">
                    <label for="bid-amount">Your Bid Amount (₹):</label>
                    <input type="number" id="bid-amount" name="bid-amount" min="850000" step="1000" required>
                    <button type="submit" class="bid-btn">Submit Bid</button>
                </form>
                <p class="bid-note">Minimum Bid Increment: ₹1,000</p>
            </div>

            <!-- Bid History -->
            <div class="bid-history">
                <h2>Bid History</h2>
                <ul>
                    <li><strong>User123</strong> - ₹8,50,000</li>
                    <li><strong>User456</strong> - ₹8,40,000</li>
                    <li><strong>User789</strong> - ₹8,30,000</li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

    <!-- Link to the auction-specific JavaScript -->
    <script>
        // Countdown Timer
        const countdownElement = document.getElementById('countdown');
        let timeLeft = 2 * 60 * 60; // 2 hours in seconds

        const updateTimer = () => {
            const hours = Math.floor(timeLeft / 3600);
            const minutes = Math.floor((timeLeft % 3600) / 60);
            const seconds = timeLeft % 60;

            countdownElement.textContent = `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

            if (timeLeft > 0) {
                timeLeft--;
            } else {
                clearInterval(timer);
                countdownElement.textContent = 'Auction Ended';
            }
        };

        const timer = setInterval(updateTimer, 1000);

        // Bid Form Submission
        const bidForm = document.getElementById('bid-form');
        bidForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const bidAmount = document.getElementById('bid-amount').value;
            alert(`Bid of ₹${bidAmount} placed successfully!`);
            // You can add logic here to send the bid to the server
        });
    </script>
</body>
</html>