<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rent Vehicle - DriveBidRent</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "montserrat", sans-serif;
}

body {
    background-color: #ffffff; /* Changed to white */
    color: #333333; /* Changed to dark gray for better contrast */
}

/* Navbar */
.navbar {
    position: sticky;
    top: 0;
    left: 0;
    right: 0;
    background-color: #ffffff; /* Changed to white */
    padding: 1rem 0;
    box-shadow: 0 2px 20px rgba(255, 107, 0, 0.2); /* Orange shadow */
    z-index: 1000;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
}

.logo a {
    color: #ff6b00; /* Orange */
    font-size: 1.8rem;
    font-weight: 700;
    text-decoration: none;
}

.nav-links {
    display: flex;
    gap: 2rem;
}

.nav-links a {
    color: #333333; /* Dark gray */
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding-bottom: 5px;
}

.nav-links a:hover, .nav-links a.active {
    border-bottom: 3px solid #ff6b00; /* Orange */
}

/* Logout Button */
.logout-btn {
    background-color: #ff6b00; /* Orange */
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
}

.logout-btn:hover {
    background-color: #e65c00; /* Darker orange */
    transform: translateY(-1px);
}

/* Adjust profile container to accommodate the new button */
.profile {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap; /* Allow items to wrap if needed */
}

.profile img {
    height: 40px;
    border-radius: 50%; /* Make the profile image round */
}

.profile-text {
    color: #ff6b00; /* Orange */
    text-decoration: none;
    font-weight: 600; /* Bold */
    text-transform: uppercase; /* Uppercase text */
    letter-spacing: 1px; /* Add spacing between letters */
    transition: color 0.3s ease;
}

.profile-text:hover {
    color: #e65c00; /* Darker orange on hover */
}


/* Rental Page Styles */
.rental-details {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.rental-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
}

.vehicle-image img {
    width: 100%;
    border-radius: 1rem;
}

.vehicle-info h1 {
    color: #ff6b00;
    font-size: 2.5rem;
    margin-bottom: 1rem;
}

.rental-cost {
    font-size: 1.2rem;
    margin-bottom: 1rem;
}

.vehicle-specs {
    background-color: #f9f9f9;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
}

.vehicle-specs p {
    margin-bottom: 0.5rem;
    color: #333333;
}

.rental-form {
    background-color: #ffffff;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.rental-form h2 {
    color: #ff6b00;
    margin-bottom: 1rem;
}

.rental-form label {
    display: block;
    margin-bottom: 0.5rem;
    color: #333333;
}

.rental-form input, .rental-form select {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid #ccc;
    border-radius: 0.3rem;
}

.rent-btn {
    background: linear-gradient(135deg, #ff6b00, #ff9a44);
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 0.3rem;
    cursor: pointer;
    transition: background 0.3s ease;
}

.rent-btn:hover {
    background: linear-gradient(135deg, #ff9a44, #ff6b00);
}

.rental-summary {
    background-color: #ffffff;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    margin-top: 2rem;
}

.rental-summary h2 {
    color: #ff6b00;
    margin-bottom: 1rem;
}

.rental-summary p {
    margin-bottom: 0.5rem;
    color: #333333;
}

/* Footer */
footer {
    background: linear-gradient(135deg, #ff6b00, #ff9a44); /* Gradient background */
    padding: 4rem 2rem 2rem;
    margin-top: 4rem;
    color: white; /* White text for better contrast */
    border-top: none; /* Remove the orange border */
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    gap: 3rem;
}

.footer-section h3 {
    color: white; /* White text for headings */
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.8rem;
}

.footer-section a {
    color: white; /* White text for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section p {
    margin-top: 0.8rem;
    color: white; /* White text for paragraphs */
}

.footer-section a:hover {
    color: #f0f0f0; /* Light gray on hover */
}

.social-icons {
    display: flex;
    gap: 1rem;
}

.social-icons img {
    width: 30px;
    height: 30px;
    filter: brightness(0) invert(1); /* Make icons white */
    transition: transform 0.3s ease;
}

.social-icons img:hover {
    transform: scale(1.2); /* Scale icons on hover */
}

.copyright {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2); /* Light white border */
    color: white; /* White text for copyright */
}
/* Responsive Design */
@media (max-width: 768px) {
    .nav-container {
        flex-direction: column;
        gap: 1rem;
    }

    .nav-links {
        flex-wrap: wrap;
        justify-content: center;
    }

    .hero {
        margin-top: 8rem;
    }
}


    </style>
</head>
<body>
<!-- Navigation Bar -->
<nav class="navbar">
    <div class="nav-container">
        <div class="logo"><a href="/proj">DriveBidRent</a></div>
        <div class="nav-links">
            <a href="/purchase">My Purchases</a>
            <a href="/wishlist">Wishlist</a>
            <a href="#notifications">Notifications</a>
            <a href="/Aboutus">About Us</a>
        </div>
        <div class="profile">
            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="profile symbol" style="height: 40px;">
            <a href="/profile" class="profile-text">My Profile</a>
            <button class="logout-btn" onclick="location.href='/'">Logout</button>
        </div>
    </div>
</nav>

    <!-- Rental Page Content -->
    <section class="rental-details">
        <div class="rental-container">
            <!-- Vehicle Image and Basic Details -->
            <div class="vehicle-image">
                <img src="<%= image %>" alt="<%= name %>">
            </div>
            <div class="vehicle-info">
                <h1><%= name %></h1>
                <p class="rental-cost">Cost/km: <strong><%= cost %></strong></p>
                <div class="vehicle-specs">
                    <p><strong>Mileage:</strong> <%= mileage %></p>
                    <p><strong>AC:</strong> <%= ac %></p>
                    <p><strong>Driver:</strong> <%= driver %></p>
                    <p><strong>Capacity:</strong> <%= capacity %></p>
                </div>
            </div>

            <!-- Rental Form -->
            <div class="rental-form">
                <h2>Rental Details</h2>
                <form id="rental-form">
                    <label for="pickup-date">Pickup Date:</label>
                    <input type="date" id="pickup-date" name="pickup-date" required>

                    <label for="return-date">Return Date:</label>
                    <input type="date" id="return-date" name="return-date" required>

                    <label for="driver-required">Driver Required:</label>
                    <select id="driver-required" name="driver-required">
                        <option value="yes">Yes</option>
                        <option value="no">No</option>
                    </select>

                    <button type="submit" class="rent-btn">Confirm Rental</button>
                </form>
            </div>

            <!-- Rental Summary -->
            <div class="rental-summary">
                <h2>Rental Summary</h2>
                <p><strong>Vehicle:</strong> Trax Toofan</p>
                <p><strong>Cost/km:</strong> ₹15</p>
                <p><strong>Pickup Date:</strong> <span id="summary-pickup-date">-</span></p>
                <p><strong>Return Date:</strong> <span id="summary-return-date">-</span></p>
                <p><strong>Driver Required:</strong> <span id="summary-driver-required">-</span></p>
                <p><strong>Total Cost:</strong> <span id="total-cost">-</span></p>
            </div>
        </div>
    </section>

        <!-- Footer -->
        <footer>
            <div class="footer-container">
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/purchase">My Purchases</a></li>
                        <li><a href="/wishlist">Wishlist</a></li>
                        <li><a href="index.html#notifications">Notifications</a></li>
                        <li><a href="/Aboutus">About Us</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact Us</h3>
                    <p><strong>Email:</strong> <a href="mailto:jeevanvankadara@gmail.com">jeevanvankadara@gmail.com</a></p>
                    <p><strong>Phone:</strong> <a href="tel:9876543210">9876543210</a></p>
                    <p><strong>Address:</strong> sb-2, sagar colony, hyderabad</p>
                </div>
                <div class="footer-section">
                    <h3>Follow Us</h3>
                    <div class="social-icons">
                        <a href="#instagram"><img src="./images/instagram.png" alt="Instagram"></a>
                        <a href="#facebook"><img src="./images/facebook.png" alt="Facebook"></a>
                        <a href="#twitter"><img src="./images/X.png" alt="X"></a>
                    </div>
                </div>
            </div>
            <p class="copyright">© 2025 DriveBidRent | All rights reserved.</p>
        </footer>

    
    <script>
// Rental Form Submission
const rentalForm = document.getElementById('rental-form');
const summaryPickupDate = document.getElementById('summary-pickup-date');
const summaryReturnDate = document.getElementById('summary-return-date');
const summaryDriverRequired = document.getElementById('summary-driver-required');
const totalCost = document.getElementById('total-cost');

rentalForm.addEventListener('submit', (e) => {
    e.preventDefault();

    // Get form values
    const pickupDate = document.getElementById('pickup-date').value;
    const returnDate = document.getElementById('return-date').value;
    const driverRequired = document.getElementById('driver-required').value;

    // Calculate total cost (example: ₹15/km * 100km)
    const costPerKm = 15;
    const distance = 100; // Example distance
    const total = costPerKm * distance;

    // Update summary
    summaryPickupDate.textContent = pickupDate;
    summaryReturnDate.textContent = returnDate;
    summaryDriverRequired.textContent = driverRequired;
    totalCost.textContent = `₹${total}`;

    alert('Rental confirmed! Thank you for choosing DriveBidRent.');
});
    </script>
</body>
</html>