<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Details</title>
    <%- include('partials/styles') %>
    <style>
      /* Main Page Styles */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #ffffff;
        color: #333;
      }

      main {
        padding: 20px;
      }

      h1,
      h2 {
        color: #ff6600;
      }

      /* Car Details Specific Styles */
      .car-details-container {
        display: flex;
        gap: 20px;
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
      }

      .car-details-box {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        flex: 2;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .car-details-box img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 20px;
      }

      .car-details-box h2 {
        font-size: 24px;
        color: #ff6600;
        margin-bottom: 15px;
      }

      .car-details-box .details {
        text-align: left;
      }

      .car-details-box .details p {
        margin: 10px 0;
        font-size: 16px;
        color: #333;
      }

      .car-details-box .details strong {
        color: #666;
      }

      .side-box {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        padding: 20px;
        flex: 1;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .side-box h3 {
        font-size: 20px;
        color: #ff6600;
        margin-bottom: 20px;
        text-align: center;
      }

      .side-box .specification {
        margin-bottom: 20px;
      }

      .side-box .specification p {
        font-size: 16px;
        color: #333;
        margin-bottom: 10px;
      }

      .side-box .star-rating {
        margin-bottom: 10px;
      }

      .side-box .star-rating span {
        cursor: pointer;
        color: #ccc;
        font-size: 24px;
        transition: color 0.3s ease;
      }

      .side-box .star-rating span.active,
      .side-box .star-rating span:hover {
        color: #ffcc00;
      }

      .side-box textarea {
        width: 100%;
        height: 60px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        resize: none;
      }

      .side-box .submit-button {
        background-color: #ff6600;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        transition: background-color 0.3s ease;
      }

      .side-box .submit-button:hover {
        background-color: #e65c00;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>

    <main>
      <h1>Car Details</h1>
      <div class="car-details-container">
        <!-- Main Car Details Box -->
        <div class="car-details-box">
          <img
            src="https://mediaservice.audi.com/media/fast/H4sIAAAAAAAAAFvzloG1tIiBOTrayfuvpGh6-m1zJgaGigIGBgZGoDhTtNOaz-I_2DhCHsCEtzEwF-SlMwJZKUycmbmJ6an6QD4_I3taTmV-aUkxO0grT6IZW1LM5FXvttkx5OyX3LxWaWLSLgZWoC7GeUCCWQhI8KUBCU5VBjAJMm8-iLAD8ZksmRkYWCuAjEgGEODjKy3KKUgsSszVK89MKckQ1DAgEgizu7iGOHr6BAMAWEMXeOkAAAA"
            alt="Vehicle Image"
            class="car-image"
          />
          <h2>Toyota Camry</h2>
          <div class="details">
            <p><strong>Owner:</strong> kishan</p>
            <p><strong>Contact:</strong> 9119988388</p>
            <p><strong>Location:</strong> iiit sricity,sricity,AP</p>
            <p><strong>Mileage:</strong> 45,000 km</p>
            <p><strong>Vehicle Type:</strong> Sedan</p>
            <p><strong>Engine:</strong> 2.5L 4-Cylinder</p>
            <p><strong>Transmission:</strong> Automatic</p>
            <p><strong>Fuel Type:</strong> Petrol</p>
          </div>
        </div>

        <!-- Side Box for Car Specifications and Rating -->
        <div class="side-box">
          <h3>Car Specifications & Rating</h3>
          <div class="specification">
            <p><strong>1. Engine Condition:</strong></p>
            <div class="star-rating">
              <span data-value="1">★</span>
              <span data-value="2">★</span>
              <span data-value="3">★</span>
              <span data-value="4">★</span>
              <span data-value="5">★</span>
            </div>
            <textarea placeholder="Add a comment..."></textarea>
          </div>
          <div class="specification">
            <p><strong>2. Transmission Condition:</strong></p>
            <div class="star-rating">
              <span data-value="1">★</span>
              <span data-value="2">★</span>
              <span data-value="3">★</span>
              <span data-value="4">★</span>
              <span data-value="5">★</span>
            </div>
            <textarea placeholder="Add a comment..."></textarea>
          </div>
          <div class="specification">
            <p><strong>3. Brake System:</strong></p>
            <div class="star-rating">
              <span data-value="1">★</span>
              <span data-value="2">★</span>
              <span data-value="3">★</span>
              <span data-value="4">★</span>
              <span data-value="5">★</span>
            </div>
            <textarea placeholder="Add a comment..."></textarea>
          </div>
          <div class="specification">
            <p><strong>4. Suspension:</strong></p>
            <div class="star-rating">
              <span data-value="1">★</span>
              <span data-value="2">★</span>
              <span data-value="3">★</span>
              <span data-value="4">★</span>
              <span data-value="5">★</span>
            </div>
            <textarea placeholder="Add a comment..."></textarea>
          </div>
          <div class="specification">
            <p><strong>5. Exterior Condition:</strong></p>
            <div class="star-rating">
              <span data-value="1">★</span>
              <span data-value="2">★</span>
              <span data-value="3">★</span>
              <span data-value="4">★</span>
              <span data-value="5">★</span>
            </div>
            <textarea placeholder="Add a comment..."></textarea>
          </div>
          <button class="submit-button">Submit</button>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>

    <script>
      // Star Rating Functionality
      document.querySelectorAll(".star-rating").forEach((ratingContainer) => {
        const stars = ratingContainer.querySelectorAll("span");
        stars.forEach((star) => {
          star.addEventListener("click", () => {
            const value = parseInt(star.getAttribute("data-value"));

            // Highlight stars up to the selected one
            stars.forEach((s, index) => {
              if (index < value) {
                s.classList.add("active");
              } else {
                s.classList.remove("active");
              }
            });

            // Store the rating value for submission
            ratingContainer.setAttribute("data-rating", value);
          });
        });
      });

      // Submit Button Functionality
      const submitButton = document.querySelector(".submit-button");
      submitButton.addEventListener("click", () => {
        // Collect all ratings and comments
        const ratings = [];
        document
          .querySelectorAll(".star-rating")
          .forEach((ratingContainer, index) => {
            const rating = ratingContainer.getAttribute("data-rating") || "0";
            const comment = ratingContainer.nextElementSibling.value;
            ratings.push({
              specification: index + 1,
              rating: rating,
              comment: comment,
            });
          });

        console.log("Submitted Ratings:", ratings);
        alert("Your ratings and comments have been submitted!");
        window.location.href = "/mechanic_dashboard/current-tasks";
      });
    </script>
  </body>
</html>
