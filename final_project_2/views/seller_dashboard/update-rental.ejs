              </li>
            </ul>
          </div>
        </div>

        <!-- Right Side: Toggle, Rental Rate Updater, and Save Button -->
        <div class="right-side">
          <!-- Toggle Availability -->
          <div class="availability-toggle">
            <h3>Availability</h3>
            <label class="switch">
              <input type="checkbox" id="availability-toggle" checked />
              <span class="slider"></span>
            </label>
            <p id="availability-status">Available</p>
          </div>

          <!-- Update Rental Rate -->
          <div class="rental-rate-updater">
            <h3>Update Rental Rate</h3>
            <div class="rental-rate">
              <button id="decrement-rate">-</button>
              <input type="number" id="rental-rate" value="10" min="0" />
              <button id="increment-rate">+</button>
              <span>₹/km</span>
            </div>
          </div>

          <!-- Save Changes Button -->
          <button class="card-btn" id="save-changes">Save Changes</button>
        </div>
      </div>
    </section>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>
    
    <!-- JavaScript for Update Rental Functionality -->
    <script>
      // Increment/Decrement Rental Rate
      const rentalRateInput = document.getElementById("rental-rate");
      const incrementButton = document.getElementById("increment-rate");
      const decrementButton = document.getElementById("decrement-rate");

      incrementButton.addEventListener("click", () => {
        rentalRateInput.value = parseInt(rentalRateInput.value) + 1;
      });

      decrementButton.addEventListener("click", () => {
        if (rentalRateInput.value > 0) {
          rentalRateInput.value = parseInt(rentalRateInput.value) - 1;
        }
      });

      // Toggle Availability
      const availabilityToggle = document.getElementById("availability-toggle");
      const availabilityStatus = document.getElementById("availability-status");

      availabilityToggle.addEventListener("change", () => {
        availabilityStatus.textContent = availabilityToggle.checked
          ? "Available"
          : "Not Available";
      });

      // Save Changes and Redirect to View Rentals
      const saveChangesButton = document.getElementById("save-changes");
      saveChangesButton.addEventListener("click", () => {
        alert("Rental details updated successfully!");
        window.location.href = "/seller_dashboard/view-rentals"; // Updated to proper route
      });
      
      // Logout button functionality
      document.querySelector('.logout-btn').addEventListener('click', () => {
        window.location.href = '/logout';
      });
    </script>
