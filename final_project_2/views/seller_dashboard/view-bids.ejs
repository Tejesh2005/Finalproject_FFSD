<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Bids - DriveBidRent</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
      }

      body {
        background-color: #ffffff;
        color: #333333;
      }

      /* Seller Dashboard Content */
      .seller-dashboard {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .seller-dashboard h1 {
        color: #ff6b00;
        font-size: 2.5rem;
        margin-bottom: 2rem;
        text-align: center;
      }

      /* Bids List */
      .bids-list {
        background-color: #ffffff;
        padding: 1.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
      }

      .bids-list h2 {
        color: #ff6b00;
        margin-bottom: 1rem;
      }

      .bids-list h3 {
        color: #333333;
        margin: 1rem 0;
        font-size: 1.2rem;
      }

      .bids-list ul {
        list-style: none;
        padding: 0;
      }

      .bids-list ul li {
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
        color: #333333;
      }

      .bids-list ul li:last-child {
        border-bottom: none;
      }
    </style>
  </head>
  <body>
    <!-- Include Navbar Partial -->
    <%- include('partials/navbar', { currentPage: '' }) %>

    <!-- View Bids Content -->
    <section class="seller-dashboard">
      <h1>Bids on <%= helpers.capitalize(auction.vehicleName) %></h1>
      <!-- Bids List -->
      <div class="bids-list">
        <h2>Bids</h2>
        <!-- Current Bid -->
        <h3>Current Bid</h3>
        <ul>
          <% if (currentBid) { %>
            <li>
              ₹<%= currentBid.bidAmount.toLocaleString('en-IN') %> - Bidder: 
              <strong><%= helpers.capitalize(currentBid.buyerId.firstName) %> <%= helpers.capitalize(currentBid.buyerId.lastName) %></strong>
              (<%= helpers.formatDate(currentBid.bidTime) %>)
            </li>
          <% } else { %>
            <li>No bids yet.</li>
          <% } %>
        </ul>
        <!-- Bid History -->
        <h3>Bid History (Last 3)</h3>
        <ul>
          <% if (bidHistory && bidHistory.length > 0) { %>
            <% bidHistory.forEach(bid => { %>
              <li>
                ₹<%= bid.bidAmount.toLocaleString('en-IN') %> - Bidder: 
                <strong><%= helpers.capitalize(bid.buyerId.firstName) %> <%= helpers.capitalize(bid.buyerId.lastName) %></strong>
                (<%= helpers.formatDate(bid.bidTime) %>)
              </li>
            <% }); %>
          <% } else { %>
            <li>No past bids available.</li>
          <% } %>
        </ul>
      </div>
    </section>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>
  </body>
</html>