<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Rentals - DriveBidRent</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Montserrat", sans-serif;
}

body {
  background-color: #ffffff;
  color: #333333;
}

/* Seller Dashboard Content */
.seller-dashboard {
  padding: 4rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.seller-dashboard h1 {
  color: #ff6b00;
  font-size: 2.5rem;
  margin-bottom: 2rem;
  text-align: center;
}

.dashboard-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.dashboard-card {
  background-color: #ffffff;
  padding: 1.5rem;
  border-radius: 1rem;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.dashboard-card:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.dashboard-card h2 {
  color: #ff6b00;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.dashboard-card p {
  margin-bottom: 0.5rem;
  color: #666666;
}

.card-btn {
  display: inline-block;
  background: linear-gradient(135deg, #ff6b00, #ff9a44);
  color: white;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: 500;
  transition: background 0.3s ease;
  margin: 0.5rem;
}

.card-btn:hover {
  background: linear-gradient(135deg, #ff9a44, #ff6b00);
}

/* Responsive Design */
@media (max-width: 768px) {
  .dashboard-cards {
    grid-template-columns: 1fr;
  }
}
    </style>
  </head>
  <body>
    <!-- Include Navbar Partial -->
    <%- include('partials/navbar', { currentPage: '' }) %>

    <!-- View Rentals Content -->
    <section class="seller-dashboard">
      <h1>Your Rental Listings</h1>
      <div class="dashboard-cards" id="rental-listings">
        <!-- Rental listings will be dynamically inserted here -->
      </div>
    </section>

    <!-- Include Footer Partial -->
    <%- include('partials/footer') %>
    
    <script>
      // Example data for rental listings
      const rentalListings = [
        {
          name: "Maruti Estilo",
          image: "https://imgd.aeplcdn.com/1280x720/cw/cars/discontinued/maruti-suzuki/estilo-2006-2009.jpg?q=80",
          year: 2019,
          mileage: 20000,
          condition: "Good",
          costPerKm: 10,
          driverAvailable: "Yes",
        },
        {
          name: "Land Rover",
          image: "https://imgd.aeplcdn.com/642x336/n/cw/ec/153319/range-rover-velar-exterior-right-front-three-quarter-4.jpeg?isig=0&q=80",
          year: 2021,
          mileage: 10000,
          condition: "Excellent",
          costPerKm: 15,
          driverAvailable: "No",
        },
        {
          name: "Toyota Innova",
          image: "https://cdni.autocarindia.com/Utils/ImageResizer.ashx?n=https://cdni.autocarindia.com/ExtraImages/20230405103153_Innova_1.jpg&w=700&c=1",
          year: 2018,
          mileage: 30000,
          condition: "Good",
          costPerKm: 20,
          driverAvailable: "Yes",
        },
        {
          name: "Tata Harrier",
          image: "https://cdni.autocarindia.com/Utils/ImageResizer.ashx?n=https://cdni.autocarindia.com/ExtraImages/20201007020644_harrier-dark.jpg&w=700&c=1",
          year: 2022,
          mileage: 5000,
          condition: "Excellent",
          costPerKm: 18,
          driverAvailable: "No",
        },
      ];

      const rentalListingsContainer = document.getElementById("rental-listings");

      // Dynamically create cards for each rental listing
      rentalListings.forEach((listing) => {
        const card = document.createElement("div");
        card.className = "dashboard-card";
        card.innerHTML = `
                <h2>${listing.name}</h2>
                <img src="${listing.image}" alt="${listing.name}" style="width: 100%; height: auto; border-radius: 0.5rem;">
                <p><strong>Year:</strong> ${listing.year}</p>
                <p><strong>Mileage:</strong> ${listing.mileage} km</p>
                <p><strong>Condition:</strong> ${listing.condition}</p>
                <p><strong>Cost/km:</strong> â‚¹${listing.costPerKm}</p>
                <p><strong>Driver Available:</strong> ${listing.driverAvailable}</p>
                <a href="/seller_dashboard/update-rental" class="card-btn">Update Rental</a>
            `;
        rentalListingsContainer.appendChild(card);
      });
      
      // Logout button functionality
      document.querySelector('.logout-btn').addEventListener('click', () => {
        window.location.href = '/logout';
      });
    </script>
  </body>
</html>