<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Rentals - DriveBidRent</title>
    <style>
        @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Montserrat", sans-serif; /* Ensure font is applied correctly */
}

body {
  background-color: #ffffff; /* White background */
  color: #333333; /* Dark gray text for better contrast */
}

/* Navigation Bar */
.navbar {
  position: sticky;
  top: 0;
  background-color: #ffffff;
  padding: 1rem 0;
  box-shadow: 0 2px 20px rgba(255, 107, 0, 0.2);
  z-index: 1000;
}

.nav-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 2rem;
}

.logo a {
  color: #ff6b00;
  font-size: 1.8rem;
  font-weight: 700;
  text-decoration: none;
}

.nav-links {
  display: flex;
  gap: 2rem;
}

.nav-links a {
  color: #333333;
  text-decoration: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.nav-links a:hover,
.nav-links a.active {
  border-bottom: 3px solid #ff6b00;
}

.profile {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.profile img {
  height: 40px;
  border-radius: 50%;
}

.profile-text {
  color: #ff6b00;
  text-decoration: none;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: color 0.3s ease;
}

.profile-text:hover {
  color: #e65c00;
}

/* Logout Button */
.logout-btn {
  background-color: #ff6b00;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-left: 0.5rem;
}

.logout-btn:hover {
  background-color: #e65c00;
  transform: translateY(-1px);
}

/* Seller Dashboard Content */
.seller-dashboard {
  padding: 4rem 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.seller-dashboard h1 {
  color: #ff6b00;
  font-size: 2.5rem;
  margin-bottom: 2rem;
  text-align: center;
}

.dashboard-cards {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.dashboard-card {
  background-color: #ffffff;
  padding: 1.5rem;
  border-radius: 1rem;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.dashboard-card:hover {
  transform: scale(1.05); /* Slightly scale up the card */
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Add a stronger shadow */
}

.dashboard-card h2 {
  color: #ff6b00;
  font-size: 1.5rem;
  margin-bottom: 1rem;
}

.dashboard-card p {
  margin-bottom: 0.5rem;
  color: #666666;
}

.card-btn {
  display: inline-block;
  background: linear-gradient(135deg, #ff6b00, #ff9a44);
  color: white;
  padding: 0.75rem 1.5rem; /* Increased padding for better spacing */
  border: none;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: 500;
  transition: background 0.3s ease;
  margin: 0.5rem; /* Added margin for spacing between buttons */
}

.card-btn:hover {
  background: linear-gradient(135deg, #ff9a44, #ff6b00);
}

/* Footer */
footer {
  background: linear-gradient(135deg, #ff6b00, #ff9a44);
  padding: 4rem 2rem 2rem;
  margin-top: 4rem;
  color: white;
}

.footer-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
  gap: 3rem;
}

.footer-section h3 {
  color: white;
  margin-bottom: 1.5rem;
  font-size: 1.2rem;
}

.footer-section ul {
  list-style: none;
}

.footer-section ul li {
  margin-bottom: 0.8rem;
}

.footer-section a {
  color: white;
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-section a:hover {
  color: #f0f0f0;
}

.social-icons {
  display: flex;
  gap: 1rem;
}

.social-icons img {
  width: 30px;
  height: 30px;
  filter: brightness(0) invert(1);
  transition: transform 0.3s ease;
}

.social-icons img:hover {
  transform: scale(1.2);
}

.copyright {
  text-align: center;
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  color: white;
}

/* Responsive Design */
@media (max-width: 768px) {
  .nav-container {
    flex-direction: column;
    gap: 1rem;
  }

  .nav-links {
    flex-wrap: wrap;
    justify-content: center;
  }

  .dashboard-cards {
    grid-template-columns: 1fr;
  }

  .footer-container {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
}
    </style>
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div class="nav-container">
        <div class="logo"><a href="/seller_dashboard/seller">DriveBidRent</a></div>
        <div class="nav-links">
          <a href="/seller_dashboard/seller">Dashboard</a>
          <a href="/seller_dashboard/add-auction">Add Auction</a>
          <a href="/seller_dashboard/add-rental">Add Rental</a>
          <a href="/seller_dashboard/view-earnings">Earnings</a>
        </div>
        <div class="profile">
          <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="profile symbol" style="height: 40px" />
          <a href="/seller_dashboard/profile" class="profile-text">My Profile</a>
          <button class="logout-btn">Logout</button>
        </div>
      </div>
    </nav>

    <!-- View Rentals Content -->
    <section class="seller-dashboard">
      <h1>Your Rental Listings</h1>
      <div class="dashboard-cards" id="rental-listings">
        <!-- Rental listings will be dynamically inserted here -->
      </div>
    </section>

   <!-- Footer -->
   <footer>
    <div class="footer-container">
      <div class="footer-section">
        <h3>Quick Links</h3>
        <ul>
          <li><a href="/seller_dashboard/seller">Dashboard</a></li>
          <li><a href="/seller_dashboard/add-auction">Add Auction</a></li>
          <li><a href="/seller_dashboard/add-rental">Add Rental</a></li>
          <li><a href="/seller_dashboard/view-earnings">Earnings</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h3>Contact Us</h3>
        <p>
          <strong>Email:</strong>
          <a href="mailto:jeevanvankadara@gmail.com"
            >jeevanvankadara@gmail.com</a
          >
        </p>
        <p><strong>Phone:</strong> <a href="tel:9876543210">9876543210</a></p>
        <p><strong>Address:</strong> sb-2, sagar colony, hyderabad</p>
      </div>
      <div class="footer-section">
        <h3>Follow Us</h3>
        <div class="social-icons">
          <a href="#instagram"
            ><img src="../../public/images/instagram.png" alt="Instagram"
          /></a>
          <a href="#facebook"
            ><img src="../../public/images/facebook.png" alt="Facebook"
          /></a>
          <a href="#twitter"><img src="../../public/images/X.png" alt="X" /></a>
        </div>
      </div>
    </div>
    <p class="copyright">© 2025 DriveBidRent | All rights reserved.</p>
  </footer>
    
    <script>
      // Example data for rental listings
      const rentalListings = [
        {
          name: "Maruti Estilo",
          image: "https://imgd.aeplcdn.com/1280x720/cw/cars/discontinued/maruti-suzuki/estilo-2006-2009.jpg?q=80",
          year: 2019,
          mileage: 20000,
          condition: "Good",
          costPerKm: 10,
          driverAvailable: "Yes",
        },
        {
          name: "Land Rover",
          image: "https://imgd.aeplcdn.com/642x336/n/cw/ec/153319/range-rover-velar-exterior-right-front-three-quarter-4.jpeg?isig=0&q=80",
          year: 2021,
          mileage: 10000,
          condition: "Excellent",
          costPerKm: 15,
          driverAvailable: "No",
        },
        {
          name: "Toyota Innova",
          image: "https://cdni.autocarindia.com/Utils/ImageResizer.ashx?n=https://cdni.autocarindia.com/ExtraImages/20230405103153_Innova_1.jpg&w=700&c=1",
          year: 2018,
          mileage: 30000,
          condition: "Good",
          costPerKm: 20,
          driverAvailable: "Yes",
        },
        {
          name: "Tata Harrier",
          image: "https://cdni.autocarindia.com/Utils/ImageResizer.ashx?n=https://cdni.autocarindia.com/ExtraImages/20201007020644_harrier-dark.jpg&w=700&c=1",
          year: 2022,
          mileage: 5000,
          condition: "Excellent",
          costPerKm: 18,
          driverAvailable: "No",
        },
      ];

      const rentalListingsContainer = document.getElementById("rental-listings");

      // Dynamically create cards for each rental listing
      rentalListings.forEach((listing) => {
        const card = document.createElement("div");
        card.className = "dashboard-card";
        card.innerHTML = `
                <h2>${listing.name}</h2>
                <img src="${listing.image}" alt="${listing.name}" style="width: 100%; height: auto; border-radius: 0.5rem;">
                <p><strong>Year:</strong> ${listing.year}</p>
                <p><strong>Mileage:</strong> ${listing.mileage} km</p>
                <p><strong>Condition:</strong> ${listing.condition}</p>
                <p><strong>Cost/km:</strong> ₹${listing.costPerKm}</p>
                <p><strong>Driver Available:</strong> ${listing.driverAvailable}</p>
                <a href="/seller_dashboard/update-rental" class="card-btn">Update Rental</a>
            `;
        rentalListingsContainer.appendChild(card);
      });
      
      // Logout button functionality
      document.querySelector('.logout-btn').addEventListener('click', () => {
        window.location.href = '/logout';
      });
    </script>
  </body>
</html>