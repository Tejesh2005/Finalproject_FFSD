<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - DriveBidRent</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
      }

      body {
        background-color: #f4f4f4;
        color: #333333;
      }

      section {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      h1 {
        color: #ff6b00;
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 2rem;
      }

      .overview-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
      }

      .overview-card {
        background-color: #ffffff;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
      }

      .overview-card h2 {
        color: #ff6b00;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
      }

      .overview-card p {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333333;
      }

      .activity-container {
        background-color: #ffffff;
        padding: 1.5rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
      }

      .activity-container h2 {
        color: #ff6b00;
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .activity-list {
        list-style: none;
        padding: 0;
      }

      .activity-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .activity-item:last-child {
        border-bottom: none;
      }

      .activity-description {
        color: #333333;
        font-size: 1rem;
      }

      .activity-timestamp {
        color: #666666;
        font-size: 0.9rem;
      }

      .error-message {
        color: #c62828;
        text-align: center;
        margin-top: 1rem;
      }

      @media (max-width: 768px) {
        .overview-grid {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <!-- Include the navbar partial -->
    <%- include('partials/navbar', { currentPage: 'admin' }) %>

    <!-- Admin Dashboard Content -->
    <section>
      <h1>Admin Dashboard</h1>

      <% if (error) { %>
        <p class="error-message"><%= error %></p>
      <% } %>

      <!-- Overview Cards -->
      <div class="overview-grid">
        <div class="overview-card">
          <h2>Total Users</h2>
          <p><%= totalUsers.toLocaleString() %></p>
        </div>
        <div class="overview-card">
          <h2>Total Earnings</h2>
          <p>â‚¹<%= totalEarnings.toLocaleString('en-IN', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="activity-container">
        <h2>Recent Activity</h2>
        <% if (recentActivity.length > 0) { %>
          <ul class="activity-list">
            <% recentActivity.forEach(activity => { %>
              <li class="activity-item">
                <span class="activity-description"><%= activity.description %></span>
                <span class="activity-timestamp">
                  <%= new Date(activity.timestamp).toLocaleString('en-IN', { dateStyle: 'short', timeStyle: 'short' }) %>
                </span>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No recent activity available.</p>
        <% } %>
      </div>
    </section>

    <!-- Include the footer partial -->
    <%- include('partials/footer') %>
  </body>
</html>