<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRIVBIDRENT - Home</title>
    <style>

@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Montserrat', sans-serif;
      }

      body {
        background-color: #ffffff; /* White background */
      }

      /* Header Styles */
      .header {
        background-color: #ff6b00; /* Orange header */
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
      }

      .logo a {
        color: white;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.8; /* Hover effect */
      }

      /* Section Styles */
      .section-title {
        text-align: center;
        padding: 20px 0;
        font-weight: bold;
        color: #333; /* Dark text for contrast */
      }

      .section-container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      .car-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
      }

      .car-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
      }

      .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
      }

      .car-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      .car-details {
        padding: 15px;
      }

      .car-title {
        font-weight: bold;
        margin-bottom: 5px;
        color: #333; /* Dark text for contrast */
      }

      .car-info {
        color: #666;
        font-size: 14px;
        margin-bottom: 3px;
      }

      .see-more {
        text-align: center;
        margin-top: 20px;
      }

      .see-more a {
        color: #ff6b00; /* Orange text for links */
        text-decoration: none;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .see-more a:hover {
        opacity: 0.8; /* Hover effect */
      }

      /* Responsive Adjustments */
      @media (max-width: 768px) {
        .car-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (max-width: 480px) {
        .car-grid {
          grid-template-columns: 1fr;
        }

        .nav-links {
          flex-direction: column;
          align-items: flex-end;
        }

        .nav-links a {
          margin: 5px 0;
        }
      }
      /* Footer */
footer {
    background: linear-gradient(135deg, #ff6b00, #ff9a44); /* Gradient background */
    padding: 4rem 2rem 2rem;
    margin-top: 4rem;
    color: white; /* White text for better contrast */
    border-top: none; /* Remove the orange border */
}

.footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-around;
    gap: 3rem;
}

.footer-section h3 {
    color: white; /* White text for headings */
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.8rem;
}

.footer-section a {
    color: white; /* White text for links */
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-section p {
    margin-top: 0.8rem;
    color: white; /* White text for paragraphs */
}

.footer-section a:hover {
    color: #f0f0f0; /* Light gray on hover */
}

.social-icons {
    display: flex;
    gap: 1rem;
}

.social-icons img {
    width: 30px;
    height: 30px;
    filter: brightness(0) invert(1); /* Make icons white */
    transition: transform 0.3s ease;
}

.social-icons img:hover {
    transform: scale(1.2); /* Scale icons on hover */
}

.copyright {
    text-align: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2); /* Light white border */
    color: white; /* White text for copyright */
}
    </style>
  </head>
    <body>
      <div class="header">
        <div class="logo"><a href="/auctionmanager/home1">DRIVBIDRENT</a></div>
        <div class="nav-links">
          <a href="/auctionmanager/requests">REQUESTS</a>
          <a href="/auctionmanager/pending">PENDINGCARS</a>
          <a href="/auctionmanager/approvedcars">APPROVEDCARS</a>
        </div>
      </div>

    <!-- REQUESTS Section -->
    <div class="section-title" id="requests">REQUESTS</div>
    <div class="section-container">
        <div class="car-grid">
            <% if (auctionReqPend && auctionReqPend.length > 0) { %>
                <% auctionReqPend.slice(0, 3).forEach(function(request) { %>
                    <div class="car-card">
                        <img src="<%= request.vehicleImage %>" alt="<%= request.vehicleName %>" class="car-image" />
                        <div class="car-details">
                            <div class="car-title"><%= request.vehicleName %></div>
                            <div class="car-info">Seller: <%= request.sellerId.firstName %> <%= request.sellerId.lastName %></div>
                            <div class="car-info">Location: <%= request.sellerId.city %></div>
                            <div class="see-more">
                                <a href="/auctionmanager/assign-mechanic/<%= request._id %>">More Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No pending requests found</p>
            <% } %>
        </div>

        <div class="see-more">
            <a href="/auctionmanager/requests">See More</a>
        </div>
    </div>

      

<!-- PENDINGCARS Section -->
<div class="section-title" id="pendingcars">PENDINGCARS</div>
<div class="section-container">
    <div class="car-grid">
        <% if (pendingCars && pendingCars.length > 0) { %>
            <% pendingCars.forEach(function(car) { %>
                <div class="car-card">
                    <img src="<%= car.vehicleImage %>" alt="<%= car.vehicleName %>" class="car-image" />
                    <div class="car-details">
                        <div class="car-title"><%= car.vehicleName %></div>
                        <div class="car-info">Seller: <%= car.sellerId.firstName %> <%= car.sellerId.lastName %></div>
                <div class="car-info">Location: <%= car.sellerId.city %></div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No cars currently pending inspection</p>
        <% } %>
    </div>
    <div class="see-more">
        <a href="/auctionmanager/pending">See More</a>
    </div>
</div>

      <!-- APPROVEDCARS Section -->
<div class="section-title" id="approvedcars">APPROVEDCARS</div>
<div class="section-container">
    <div class="car-grid">
        <% if (approvedCars && approvedCars.length > 0) { %>
            <% approvedCars.forEach(function(car) { %>
                <div class="car-card">
                    <img src="<%= car.vehicleImage %>" alt="<%= car.vehicleName %>" class="car-image" />
                    <div class="car-details">
                        <div class="car-title"><%= car.vehicleName %></div>
                        <div class="car-info">Year: <%= car.year %></div>
                        <div class="car-info">Mileage: <%= car.mileage %> km</div>
                        <div class="car-info">Status: Approved</div>
                        <div class="car-info">Starting Bid: $<%= car.startingBid %></div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p>No approved cars available</p>
        <% } %>
    </div>
    <div class="see-more">
        <a href="/auctionmanager/approvedcars">See More</a>
    </div>
</div>
