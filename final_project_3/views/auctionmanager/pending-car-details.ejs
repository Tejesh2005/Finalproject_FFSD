<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRIVBIDRENT - Car Details</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
      }

      body {
        background-color: #ffffff;
      }

      /* Header Styles */
      .header {
        background-color: #ff6b00;
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
      }

      .logo a {
        color: white;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
      }

      .nav-links a {
        color: white;
        text-decoration: none;
        margin-left: 20px;
        font-weight: bold;
        transition: opacity 0.3s ease;
      }

      .nav-links a:hover {
        opacity: 0.8;
      }

      /* Car Details Container */
      .car-details-container {
        max-width: 1000px;
        margin: 120px auto 20px;
        padding: 30px 20px;
      }

      .car-image-container {
        width: 100%;
        height: 300px;
        overflow: hidden;
        border-radius: 10px;
        margin-bottom: 20px;
      }

      .car-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .car-name {
        font-size: 28px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }

      .car-info {
        font-size: 18px;
        color: #666;
        margin-bottom: 10px;
      }

      .car-info strong {
        color: #333;
      }

      .rating-section {
        margin-top: 20px;
      }

      .rating-section h3 {
        font-size: 22px;
        color: #333;
        margin-bottom: 10px;
      }

      .rating-item {
        margin-bottom: 15px;
      }

      .rating-item p {
        font-size: 16px;
        color: #666;
        margin-bottom: 5px;
      }

      .rating-item textarea {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        resize: vertical;
      }

      .action-buttons {
        display: flex;
        gap: 10px;
        margin-top: 20px;
      }

      .approve-btn,
      .decline-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: opacity 0.3s ease;
      }

      .approve-btn {
        background-color: #4caf50;
        color: white;
      }

      .decline-btn {
        background-color: #f44336;
        color: white;
      }

      .approve-btn:hover,
      .decline-btn:hover {
        opacity: 0.8;
      }

      .status {
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        margin-top: 20px;
        display: inline-block;
      }

      .approved {
        background-color: #4caf50;
      }

      .declined {
        background-color: #f44336;
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>

    <!-- Car Details Container -->
    <div class="car-details-container">
      <div class="car-image-container">
        <img
          src="/images/tata_toofan.png"
          alt="Tata Toofan"
          class="car-image"
        />
      </div>
      <div class="car-name">Tata Toofan</div>
      <div class="car-info"><strong>Mileage:</strong> 35,000 km</div>
      <div class="car-info"><strong>Condition:</strong> Pending</div>

      <!-- Mechanic's Ratings and Comments -->
      <div class="rating-section">
        <h3>Mechanic's Ratings & Comments</h3>
        <div class="rating-item">
          <p><strong>Engine Condition:</strong> ★★★★☆</p>
          <textarea readonly>Well-maintained engine, no issues found.</textarea>
        </div>
        <div class="rating-item">
          <p><strong>Transmission Condition:</strong> ★★★☆☆</p>
          <textarea readonly>Minor wear, but functions properly.</textarea>
        </div>
        <div class="rating-item">
          <p><strong>Brake System:</strong> ★★★★★</p>
          <textarea readonly>Brakes are in excellent condition.</textarea>
        </div>
        <div class="rating-item">
          <p><strong>Suspension:</strong> ★★★★☆</p>
          <textarea readonly>Good condition, no major issues.</textarea>
        </div>
        <div class="rating-item">
          <p><strong>Exterior Condition:</strong> ★★★☆☆</p>
          <textarea readonly>Minor scratches, but overall good.</textarea>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="action-buttons" id="action-buttons">
        <button class="approve-btn" onclick="approveCar()">Approve</button>
        <button class="decline-btn" onclick="declineCar()">Decline</button>
      </div>

      <!-- Status (Approved/Declined) -->
      <div id="status" class="status" style="display: none"></div>
    </div>

    <%- include('partials/footer') %>

    <script>
      function approveCar() {
        const buttons = document.getElementById("action-buttons");
        const status = document.getElementById("status");

        buttons.style.display = "none";
        status.textContent = "Approved";
        status.className = "approved";
        status.style.display = "block";
      }

      function declineCar() {
        const buttons = document.getElementById("action-buttons");
        const status = document.getElementById("status");

        buttons.style.display = "none";
        status.textContent = "Declined";
        status.className = "declined";
        status.style.display = "block";
      }
    </script>
  </body>
</html>