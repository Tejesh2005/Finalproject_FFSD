<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DRIVBIDRENT - Requests</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Montserrat", sans-serif;
      }

      body {
        background-color: #ffffff;
      }

      /* Cards Container */
      .cards-container {
        max-width: 1000px;
        margin: 20px auto;
        padding: 30px 20px;
      }

      .car-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
      }

      .car-card {
        background-color: #ffffff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
      }

      .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
      }

      .car-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
      }

      .car-details {
        margin-top: 15px;
      }

      .car-title {
        font-size: 20px;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }

      .car-info {
        font-size: 16px;
        color: #666;
        margin-bottom: 5px;
      }

      .mechanic-button {
        width: 100%;
        padding: 10px;
        background-color: #ff6b00;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: opacity 0.3s ease;
      }

      .mechanic-button:hover {
        opacity: 0.8;
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>

    <!-- Cards Container -->
    <div class="cards-container">
      <div class="car-grid">
        <% auctionReqPend.forEach(function(request) { %>
        <div
          class="car-card"
          onclick="window.location.href='/auctionmanager/assign-mechanic/<%= request._id %>'"
        >
          <img
            src="<%= request.vehicleImage %>"
            alt="<%= request.vehicleName %>"
            class="car-image"
          />
          <div class="car-details">
            <div class="car-title"><%= request.vehicleName %></div>
            <div class="car-info">
              Seller: <%= request.sellerId.firstName %> <%=
              request.sellerId.lastName %>
            </div>
            <div class="car-info">Location: <%= request.sellerId.city %></div>
          </div>
          <button
            class="mechanic-button"
            onclick="window.location.href='/auctionmanager/assign-mechanic/<%= request._id %>'"
          >
            More Details
          </button>
        </div>
        <% }); %>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>